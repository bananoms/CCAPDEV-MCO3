                    img(src="https://img.icons8.com/ios-filled/24/000000/facebook-new.png")
                if profile.socialLinks.twitter
                  a(href=profile.socialLinks.twitter)
                    img(src="https://img.icons8.com/ios-filled/24/000000/twitter.png")
                if profile.socialLinks.linkedin
                  a(href=profile.socialLinks.linkedin)
                    img(src="https://img.icons8.com/ios-filled/24/000000/linkedin.png")
    // Reservation Sidebar
    aside.sidebar
      .notif-box
        h2 Reservations
        .reservation-list
          if reservations && reservations.length > 0
            each reservation in reservations
              .reservation-item
                .reservation-header
                  span.reservation-lab= reservation.lab
                  span.reservation-seat= reservation.seat
                .reservation-time
                  span.reservation-date= new Date(reservation.resDate.start).toLocaleDateString()
                  span.reservation-hours= `${new Date(reservation.resDate.start).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})} - ${new Date(reservation.resDate.end).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`
                if reservation.reservedStud
                  .reservation-students
                    span.student-count= `${reservation.reservedStud} students`
          else
          .no-reservations No reservations found